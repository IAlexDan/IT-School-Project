@model ContosoVet.ViewModels.LoginViewModel;
<br>
<br>
<br>
<br>

<div>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 ml-auto mr-auto">
                <div class="card card-login">
                    <form class="form" asp-controller="Auth" asp-action="Login">
                        <div class="card-header card-header text-center">
                            <h4 class="card-title">Log in</h4>
                        </div>
                        <div class="card-body">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="material-icons">face</i>
                                    </span>
                                </div>
                                <input asp-for="Username"
                                       type="text" class="form-control" placeholder="Username...">
                            </div>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="material-icons">lock_outline</i>
                                    </span>
                                </div>
                                <input asp-for="Password"
                                       type="password" class="form-control" placeholder="Password...">
                            </div>
                            <!-- If you want to add a checkbox to this form, uncomment this code

                            <div class="checkbox">
                              <label>
                                <input type="checkbox" name="optionsCheckboxes" checked>
                                Subscribe to newsletter
                              </label>
                            </div> -->
                        </div>
                        <div class="submit text-center">
                            <input type="submit" href="#pablo" class="btn btn-dark btn-success" value="Log in">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>